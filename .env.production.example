# Production Environment Variables
# Copy to .env.production and update with your production values

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://production_user:strong_password@production-db-host:5432/legal_analysis_production
DB_USER=production_user
DB_PASSWORD=strong_password

# Redis Configuration
REDIS_URL=redis://:strong_redis_password@redis-host:6379/0
REDIS_PASSWORD=strong_redis_password

# DeepSeek API (Required)
DEEPSEEK_API_KEY=your_production_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Indian Kanoon API (Optional)
INDIAN_KANOON_API_KEY=your_production_indian_kanoon_api_key_here
INDIAN_KANOON_BASE_URL=https://api.indiankanoon.org

# JWT Configuration (Required - CHANGE IN PRODUCTION)
JWT_SECRET_KEY=your_very_strong_jwt_secret_key_change_this_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AWS S3 Configuration (Optional - for file storage)
S3_BUCKET_NAME=legal-analysis-documents-production
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_REGION=ap-south-1

# Application Settings
DEBUG=false
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,api.your-domain.com
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
MAX_UPLOAD_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,rtf,png,jpg,jpeg

# OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract
OCR_ENABLED=true

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@your-domain.com
SMTP_PASSWORD=your_app_specific_password

# pgAdmin Configuration (Optional)
PGADMIN_EMAIL=admin@your-domain.com
PGADMIN_PASSWORD=strong_pgadmin_password
PGADMIN_PORT=5050

# Application Port
PORT=8000