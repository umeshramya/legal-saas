# Database configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/legal_analysis

# Redis configuration
REDIS_URL=redis://localhost:6379/0

# DeepSeek API
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Indian Kanoon API
INDIAN_KANOON_API_KEY=your_indian_kanoon_api_key_here
INDIAN_KANOON_BASE_URL=https://api.indiankanoon.org

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage
S3_BUCKET_NAME=legal-analysis-documents
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_REGION=ap-south-1

# Application Settings
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# OCR Configuration (optional)
TESSERACT_PATH=/usr/bin/tesseract  # Set if tesseract is in non-standard location
OCR_ENABLED=true  # Set to false to disable OCR functionality